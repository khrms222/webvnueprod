@{
    Layout = null;
}

@model Webvnue.Models.Login


<body>
    <div class="container">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <div class="panel-title">Sign In</div>
                    <div style="float:right; font-size: 80%; position: relative; top:-15px; right: 50px"><a href="/account/forgotpassword">Forgot password?</a></div>
                </div>
                <div style="padding-top:30px" class="panel-body">
                    @if (ViewData.ModelState["invalid"] != null)
                    {
                        <div style="display:block" id="login-alert" class="alert alert-danger col-sm-12">@Html.ValidationMessage("invalid", "", new { @class = "text-danger" })</div>
                    }

                    @using (Html.BeginForm("login", "account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div style="margin-bottom: 15px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="login-username" type="text" class="form-control" name="UserName" value="" placeholder="Username">
                        </div>
                        

                            <div style="margin-bottom: 15px" class="input-group">
                                @Html.ValidationMessage("UserName", "", new { @class = "text-danger" })
                            </div>

                            <div style="margin-bottom: 15px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input id="login-password" type="password" class="form-control" name="Password" placeholder="Password">
                            </div>
                            <div style="margin-bottom: 15px" class="input-group">
                                @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
                            </div>
                           

                            <div class="input-group">
                                <div class="input-group">
                                    <span style="padding-right: 10px">Remember me</span>
                                    @Html.EditorFor(model => model.RememberMe)
                                </div>
                            </div>

                            <div style="margin-top:10px" class="form-group">
                                <!-- Button -->
                                <div class="col-sm-4 col-sm-offset-4">
                                    <input type="submit" value="Login" class="btn btn-success btn-block">
                                </div>
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>

