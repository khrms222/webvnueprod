                                    -->

                                <img src="~/Images/a3.jpg" />

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="shoppingbag" class="tab-pane">
                <div class="col-md-9 order-content">

                    <div class="form_main col-md-4 col-sm-5 col-xs-7">
                        <h4 class="heading"><strong>Shopping </strong> Bag <span></span></h4>
                        <div class="form">
                            <div class="col-md-9 col-lg-9">

                                <!--
                                    Write code for Shopping Bag here

                                    -->
                                <img src="~/Images/a1.jpg" />

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

